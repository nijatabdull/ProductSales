@{
    ViewData["Title"] = "Index";
}
@model List<CourseViewModel>

<div class="row">
    <div class="col-md-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurslar</h5>

                <a asp-controller="Course" asp-action="Create" class="btn btn-primary mb-3">Kurs yarat</a>
                @if (Model!=null && Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Foto</th>
                                <th>Kurs adı</th>
                                <th>Qiymət</th>
                                <th>Tarix</th>
                                <th>Kateqoriya</th>
                                <th>Proseslər</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img style="width:72px;" src="@item.Picture" class="img-thumbnail" /></td>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.FeatureViewModel?.Duration</td>
                                    <td>@item.CategoryViewModel?.Name</td>
                                    <td>
                                        <a asp-controller="Course" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success btn-sm">Güncelle</a>

                                        <a asp-controller="Course" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        Kurs yoxdur
                    </div>
                }
            </div>
        </div>
    </div>
</div>