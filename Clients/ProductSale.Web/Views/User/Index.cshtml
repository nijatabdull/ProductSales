@model UserViewModel
<div class="row">
    <div class="col-md-9">
        <div class="card">
            <div class="card-body">
                <h5>User Info</h5>

                <table class="table table-striped">
                    <tr>
                        <td>UserName</td>
                        <td>@Model.UserName</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>@Model.Email</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="list-group">
            <a asp-controller="Course" asp-action="Index" class="list-group-item list-group-item-action">Courses</a>
        </div>
    </div>
</div>