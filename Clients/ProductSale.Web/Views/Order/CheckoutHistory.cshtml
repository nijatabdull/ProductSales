@{
    ViewData["Title"] = "CheckoutHistory";
}
@model List<OrderViewModel>

<div class="row">

    <div class="col-md-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Ödəmə tarixcəsi</h5>

                @if (Model.Any())
                {

                    <table class="table table-striped table-bordered">

                        <tr>
                            <th>Sifariş(ödəmə) no</th>
                            <th>Alma tarixi</th>
                            <th>Detallar</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.Id</td>
                                <td>@item.CreateDate.ToShortDateString()</td>
                                <td>
                                    <table class="table table-striped">

                                        <tr>
                                            <th>Kurs adı</th>
                                            <th>Kurs qiyməti</th>
                                        </tr>
                                        @foreach (var orderItem in item.OrderItemViewModels)
                                        {
                                            <tr>
                                                <td>@orderItem.ProductName</td>
                                                <td>@orderItem.Price AZN</td>
                                            </tr>
                                        }
                                    </table>
                                </td>
                            </tr>
                        }
                    </table>

                }
                else
                {
                    <div class="alert alert-info">Aldığınız kurs yoxdur.</div>
                }
            </div>
        </div>
    </div>
</div>